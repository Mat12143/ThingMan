package components

templ ErrorPopup() {
	<template x-if="error">
		<div class="w-full h-full flex justify-center items-center text-center z-10 fixed text-white bg-black">
			<div class="flex flex-col justify-center items-center text-center gap-5">
				<h1 class="text-xl font-bold">Error</h1>
				<p>An Error Occured while updating the item</p>
				<button class="p-3 rounded-md bg-white text-black" @click="window.location.reload()">Reload Page</button>
			</div>
		</div>
	</template>
}
